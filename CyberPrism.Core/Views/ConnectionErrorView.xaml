<UserControl x:Class="CyberPrism.Core.Views.ConnectionErrorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:constants="clr-namespace:CyberPrism.Core.Constants"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#1b2b3a">
        <Border BorderBrush="#ff4444" BorderThickness="1" Margin="40" CornerRadius="10" Background="#243447">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="40">
                <!-- Warning Icon -->
                <Path Data="M12,2L1,21H23L12,2M12,6L19.53,19H4.47L12,6M11,10V14H13V10H11M11,16V18H13V16H11Z" 
                      Fill="#ff4444" 
                      Stretch="Uniform" 
                      Width="80" Height="80" 
                      HorizontalAlignment="Center" 
                      Margin="0,0,0,20"/>
                
                <TextBlock Text="{x:Static constants:AppConstants.ConnectionLostTitle}" 
                           Foreground="White" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,10"/>
                
                <TextBlock Text="{x:Static constants:AppConstants.ConnectionLostMessage}" 
                           Foreground="#8b9bb4" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,20"/>

                <TextBlock Text="We are unable to connect to the manufacturing server. Please check your network connection and ensure the server application is running." 
                           Foreground="#8b9bb4" 
                           FontSize="14" 
                           TextWrapping="Wrap" 
                           TextAlignment="Center" 
                           MaxWidth="500"
                           HorizontalAlignment="Center"/>
                
                <TextBlock Text="{x:Static constants:AppConstants.ConnectionRetryMessage}" 
                           Foreground="#00d8ff" 
                           FontSize="12" 
                           FontStyle="Italic"
                           HorizontalAlignment="Center" 
                           Margin="0,30,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

