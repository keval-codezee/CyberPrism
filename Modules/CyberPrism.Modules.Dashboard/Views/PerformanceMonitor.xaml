<UserControl x:Class="CyberPrism.Modules.Dashboard.Views.PerformanceMonitor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Power Consumption -->
        <Border Grid.Column="0" Style="{StaticResource CardStyle}">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Power Consumption" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                <lvc:CartesianChart Grid.Row="1" Series="{Binding PowerConsumptionSeries}" Margin="0,10,0,0" DisableAnimations="True">
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis MinValue="0" MaxValue="600" />
                    </lvc:CartesianChart.AxisY>
                </lvc:CartesianChart>
            </Grid>
        </Border>

        <!-- Performance -->
        <Border Grid.Column="1" Style="{StaticResource CardStyle}">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Performance" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                <lvc:CartesianChart Grid.Row="1" Series="{Binding PerformanceSeries}" Margin="0,10,0,0" DisableAnimations="True">
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis MinValue="0" MaxValue="100" />
                    </lvc:CartesianChart.AxisY>
                </lvc:CartesianChart>
            </Grid>
        </Border>
    </Grid>
</UserControl>

