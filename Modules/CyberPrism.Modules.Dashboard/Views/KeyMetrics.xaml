<UserControl x:Class="CyberPrism.Modules.Dashboard.Views.KeyMetrics"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Style="{StaticResource CardStyle}">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Key Metrics" Foreground="White" FontSize="16" FontWeight="SemiBold"/>
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Margin="20">
                    <TextBlock Text="{Binding EfficiencyText}" FontSize="36" FontWeight="Bold" Foreground="#00ffaa" HorizontalAlignment="Center"/>
                    <TextBlock Text="Efficiency" Foreground="Gray" HorizontalAlignment="Center"/>
                </StackPanel>
                <StackPanel Margin="20">
                    <TextBlock Text="{Binding UnitsProducedText}" FontSize="36" FontWeight="Bold" Foreground="#ffd800" HorizontalAlignment="Center"/>
                    <TextBlock Text="Units Produced" Foreground="Gray" HorizontalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>

