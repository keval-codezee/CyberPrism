<UserControl x:Class="CyberPrism.Modules.Dashboard.Views.ProductQuality"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf">
    <Border Style="{StaticResource CardStyle}">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Product Quality" Foreground="White" FontSize="16" FontWeight="SemiBold"/>
            <lvc:PieChart Grid.Row="1" Series="{Binding QualitySeries}" LegendLocation="Right" InnerRadius="40" Margin="0,10,0,0" Foreground="White" />
        </Grid>
    </Border>
</UserControl>

